- var pageTitle = "Home Page";
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title #{pageTitle}
        include pug/layouts/styles
    body
      .page.homepage
        include pug/layouts/sidebar
        .content-area.clearfix
          include pug/layouts/header
          h3 #{pageTitle}
      include pug/layouts/scripts